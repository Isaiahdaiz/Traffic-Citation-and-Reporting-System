<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="720.0" prefWidth="1080.0" spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="DashboardAdminController">
   <ComboBox fx:id="itemTypeComboBox" prefWidth="150.0" promptText="Create New" />

                <Label alignment="TOP_LEFT" text="Welcome [username]">
      <font>
         <Font name="Arial Bold" size="22.0" />
      </font>
      <padding>
         <Insets bottom="20.0" top="20.0" />
      </padding>
   </Label>
   <HBox alignment="CENTER" minHeight="400.0" prefHeight="451.0" prefWidth="1080.0" spacing="100.0">
      <children>
         <TabPane prefHeight="500.0" prefWidth="1051.0" tabClosingPolicy="UNAVAILABLE">
           <tabs>
             <Tab text="Citations">
               <content>
                 <AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="1051.0">
                        <children>
                           <TableView fx:id="citationTable" prefHeight="418.0" prefWidth="1051.0">
                             <columns>
                                 <TableColumn fx:id="citationIdColumn" prefWidth="75.0" text="Citation ID" />
                               <TableColumn fx:id="dateIssuedColumn" prefWidth="196.0" text="Date Issued" />
                                 <TableColumn fx:id="issuedByColumn" prefWidth="75.0" text="Issued By" />
                               <TableColumn fx:id="typeColumn" prefWidth="262.0" text="Type" />
                                 <TableColumn fx:id="paymentStatusColumn" prefWidth="262.0" text="Payment Status" />
                             </columns>
                              <columnResizePolicy>
                                 <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                              </columnResizePolicy>
                           </TableView>
                        </children>
                     </AnchorPane>
               </content>
             </Tab>
             <Tab text="Drivers">
               <content>
                 <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
             </Tab>
               <Tab text="Vehicles">
                  <content>
                     <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                  </content>
               </Tab>
           </tabs>
         </TabPane>
      </children>
   </HBox>
   <Button fx:id="refreshButton" onAction="#handleRefreshButton" prefWidth="100.0" style="-fx-background-color: #0a3bff;" text="Refresh" textFill="WHITE">
      <font>
         <Font size="16.0" />
      </font>
   </Button>
   <padding>
      <Insets top="100.0" />
   </padding>

</VBox>
