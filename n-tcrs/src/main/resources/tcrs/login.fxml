<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tcrs.AuthController">
    <Label text="Login" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <TextField fx:id="usernameField" promptText="Username" maxWidth="200.0" minWidth="10.0" prefWidth="150.0"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="200.0" minWidth="10.0" prefWidth="150.0"/>
    <Button fx:id="loginButton" text="Log In" onAction="#handleLoginButtonAction" />
    <Label fx:id="errorMessageLabel" text="" style="-fx-text-fill: red;" />
</VBox>