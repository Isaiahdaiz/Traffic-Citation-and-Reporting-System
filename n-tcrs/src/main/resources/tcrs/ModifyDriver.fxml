<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane style="-fx-background-color: f5f5f5;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tcrs.ModifyDriverController">
   <top>
      <HBox fillHeight="false" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #3333ff;" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="BASELINE_CENTER" contentDisplay="CENTER" prefHeight="40.0" prefWidth="290.0" style="-fx-background-color: #3333ff; -fx-font-weight: 700;" text="Traffic and Reporting System" textAlignment="CENTER" textFill="WHITE" textOverrun="CLIP">
               <font>
                  <Font name="Helvetica" size="17.0" />
               </font>
            </Label>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button mnemonicParsing="false" onAction="#switchToHome" prefHeight="38.0" prefWidth="100.0" styleClass="nav-btn-class" stylesheets="@styling.css" text="Home">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#switchToSearch" prefHeight="40.0" prefWidth="100.0" styleClass="nav-btn-current" stylesheets="@styling.css" text="Search" />
                  <Button mnemonicParsing="false" onAction="#switchToReports" prefHeight="38.0" prefWidth="100.0" styleClass="nav-btn-class" stylesheets="@styling.css" text="Reports" />
                  <Button mnemonicParsing="false" onAction="#switchToLogout" prefHeight="38.0" prefWidth="60.0" styleClass="nav-btn-class" stylesheets="@styling.css" text="Logout" />
              </buttons>
               <HBox.margin>
                  <Insets left="70.0" />
               </HBox.margin>
            </ButtonBar>
         </children>
      </HBox>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" maxHeight="480.0" maxWidth="720.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="480.0" prefWidth="720.0">
      
                      <Label alignment="TOP_LEFT" text="Details">
            <font>
               <Font name="Arial Bold" size="22.0" />
            </font>
            <padding>
               <Insets top="20.0" />
            </padding>
         </Label>
         <HBox alignment="CENTER" prefHeight="413.0" prefWidth="720.0" spacing="10.0">
            <children>
               <VBox prefWidth="288.0">
                  <children>
                     <Label fx:id="dateTimeLabel" prefHeight="41.0" prefWidth="137.0" text="Driver Information">
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                     </Label>
                     <Label text="Driver's License Number">
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                     </Label>
                     <TextField fx:id="driverLicenseNumberTextField" promptText="1234-1234-1234-1234">
                        <font>
                           <Font name="Arial" size="14.0" />
                        </font>
                        <VBox.margin>
                           <Insets left="10.0" />
                        </VBox.margin>
                     </TextField>
                     <Label fx:id="driverLicenseNumberErrorLabel" text="*Invalid Input" textFill="RED" visible="false">
                        <font>
                           <Font name="Arial" size="14.0" />
                        </font>
                     </Label>
                     <Label text="First Name">
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                     </Label>
                     <TextField fx:id="firstNameTextField" promptText="John">
                        <font>
                           <Font name="Arial" size="14.0" />
                        </font>
                        <VBox.margin>
                           <Insets left="10.0" />
                        </VBox.margin>
                     </TextField>
                     <Label fx:id="firstNameErrorLabel" text="*Invalid Input" textFill="RED" visible="false">
                        <font>
                           <Font name="Arial" size="14.0" />
                        </font>
                        <VBox.margin>
                           <Insets left="10.0" />
                        </VBox.margin>
                     </Label>
                     <Label text="Last Name">
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                     </Label>
                     <TextField fx:id="lastNameTextField" promptText="Doe">
                        <font>
                           <Font name="Arial" size="14.0" />
                        </font>
                        <VBox.margin>
                           <Insets left="10.0" />
                        </VBox.margin>
                     </TextField>
                     <Label fx:id="lastNameErrorLabel" text="*Invalid Input" textFill="RED" visible="false">
                        <font>
                           <Font name="Arial" size="14.0" />
                        </font>
                        <VBox.margin>
                           <Insets left="10.0" />
                        </VBox.margin>
                     </Label>
                     <Label text="Date of Birth">
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                     </Label>
                     <DatePicker fx:id="dOBDatePicker" disable="true" prefWidth="290.0">
                        <VBox.margin>
                           <Insets left="10.0" />
                        </VBox.margin>
                     </DatePicker>
                  </children>
               </VBox>
               <VBox alignment="BOTTOM_LEFT" prefHeight="552.0" prefWidth="405.0">
                  <children>
                     <Label text="License Status">
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                     </Label>
                     <HBox>
                        <children>
                           <RadioButton fx:id="licenseActiveRadioButton" mnemonicParsing="false" prefWidth="150.0" text="Active">
                              <font>
                                 <Font name="Arial" size="14.0" />
                              </font>
                              <toggleGroup>
                                 <ToggleGroup fx:id="licenseStatus" />
                              </toggleGroup>
                           </RadioButton>
                           <RadioButton fx:id="licenseNotActiveRadioButton" mnemonicParsing="false" prefWidth="150.0" selected="true" text="Not Active" toggleGroup="$licenseStatus">
                              <font>
                                 <Font name="Arial" size="14.0" />
                              </font>
                           </RadioButton>
                           <RadioButton fx:id="licenseSuspendedRadioButton" mnemonicParsing="false" selected="true" text="Suspended" toggleGroup="$licenseStatus">
                              <font>
                                 <Font name="Arial" size="14.0" />
                              </font>
                           </RadioButton>
                        </children>
                     </HBox>
                     <Label text="Warrant Status">
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                     </Label>
                     <HBox>
                        <children>
                           <RadioButton fx:id="warrantsYesRadioButton" mnemonicParsing="false" prefWidth="150.0" text="Active">
                              <font>
                                 <Font name="Arial" size="14.0" />
                              </font>
                              <toggleGroup>
                                 <ToggleGroup fx:id="P" />
                              </toggleGroup>
                           </RadioButton>
                           <RadioButton fx:id="warrantsNoRadioButton" mnemonicParsing="false" selected="true" text="Not Active" toggleGroup="$P">
                              <font>
                                 <Font name="Arial" size="14.0" />
                              </font>
                           </RadioButton>
                        </children>
                     </HBox>
                     <Label text="Driving Record">
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                     </Label>
                     <TextArea fx:id="drivingRecordTextArea" prefHeight="157.0" prefWidth="405.0">
                        <font>
                           <Font name="Arial" size="14.0" />
                        </font>
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                     </TextArea>
                     <Label text="Notes">
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                     </Label>
                     <TextArea fx:id="notesTextArea" prefHeight="81.0" prefWidth="405.0">
                        <font>
                           <Font name="Arial" size="14.0" />
                        </font>
                        <VBox.margin>
                           <Insets bottom="10.0" />
                        </VBox.margin>
                     </TextArea>
                     <HBox alignment="TOP_RIGHT" spacing="20.0">
                        <children>
                           <Button fx:id="cancelButton" onAction="#handleCancelButton" prefWidth="100.0" style="-fx-background-color: #0a3bff;" text="Cancel" textFill="WHITE">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </Button>
                           <Button fx:id="deleteButton" onAction="#handleDeleteButton" prefWidth="100.0" style="-fx-background-color: #0a3bff;" text="Delete" textFill="WHITE">
                              <font>
                                 <Font size="14.0" />
                              </font>
                           </Button>
                           <StackPane>
                              <children>
                                 <Button fx:id="applyButton" onAction="#handleApplyButton" prefWidth="100.0" style="-fx-background-color: #0a3bff;" text="Apply" textFill="WHITE">
                                    <font>
                                       <Font name="Arial" size="14.0" />
                                    </font>
                                 </Button>
                                 <Button fx:id="modifyButton" onAction="#handleModifyButton" prefWidth="100.0" style="-fx-background-color: #0a3bff;" text="Modify" textFill="WHITE">
                                    <font>
                                       <Font name="Arial" size="14.0" />
                                    </font>
                                 </Button>
                              </children>
                           </StackPane>
                        </children>
                     </HBox>
                  </children>
               </VBox>
            </children>
         </HBox>
      
      </VBox>
   </center>
</BorderPane>
