<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SearchAllController">

                <Label alignment="TOP_LEFT" text="Search">
      <font>
         <Font name="Arial Bold" size="22.0" />
      </font>
      <padding>
         <Insets bottom="20.0" top="20.0" />
      </padding>
   </Label>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
      <children>
         <VBox spacing="5.0">
            <children>
               <Label text="Search by Citation ID">
                  <font>
                     <Font name="Arial" size="18.0" />
                  </font>
               </Label>
               <TextField fx:id="citationIDTextField" prefWidth="380.0" promptText="12345678">
                  <font>
                     <Font size="16.0" />
                  </font>
                  <VBox.margin>
                     <Insets left="10.0" />
                  </VBox.margin>
               </TextField>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label fx:id="citationIDErrorLabel" text="*Invalid Input" textFill="RED" visible="false">
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                        <padding>
                           <Insets bottom="5.0" />
                        </padding>
                        <HBox.margin>
                           <Insets left="10.0" />
                        </HBox.margin>
                     </Label>
                  </children>
               </HBox>
               <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Button fx:id="citationIDSearch" onAction="#handleCitaionIDSearchButton" prefWidth="100.0" style="-fx-background-color: #0a3bff;" text="Search" textFill="WHITE">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </Button>
                  </children>
               </HBox>
               <Label text="Search by Driver's License #">
                  <font>
                     <Font name="Arial" size="18.0" />
                  </font>
               </Label>
               <TextField fx:id="driverLicenseNumberTextField" promptText="1234-1234-1234-1234">
                  <font>
                     <Font size="16.0" />
                  </font>
                  <VBox.margin>
                     <Insets left="10.0" />
                  </VBox.margin>
               </TextField>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label fx:id="driverLicenseNumberErrorLabel" text="*Invalid Input" textFill="RED" visible="false">
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                        <padding>
                           <Insets bottom="5.0" />
                        </padding>
                        <HBox.margin>
                           <Insets left="10.0" />
                        </HBox.margin>
                     </Label>
                  </children>
               </HBox>
               <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Button fx:id="driverLicenseNumberSearch" onAction="#handleDLNumberSearchtButton" prefWidth="100.0" style="-fx-background-color: #0a3bff;" text="Search" textFill="WHITE">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </Button>
                  </children>
               </HBox>
               <Label text="Vehicle Identification Number">
                  <font>
                     <Font name="Arial" size="18.0" />
                  </font>
               </Label>
               <TextField fx:id="vehicleIdTextField" promptText="2T2K1E56A12345674">
                  <font>
                     <Font size="16.0" />
                  </font>
                  <VBox.margin>
                     <Insets left="10.0" />
                  </VBox.margin>
               </TextField>
               <HBox prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Label fx:id="vehicleIdErrorLabel" text="*Invalid Input" textFill="RED" visible="false">
                        <font>
                           <Font name="Arial" size="16.0" />
                        </font>
                        <padding>
                           <Insets bottom="5.0" />
                        </padding>
                        <HBox.margin>
                           <Insets left="10.0" />
                        </HBox.margin>
                     </Label>
                  </children>
               </HBox>
               <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
                  <children>
                     <Button fx:id="vehicleIdSearch" onAction="#handleVINSearchButton" prefWidth="100.0" style="-fx-background-color: #0a3bff;" text="Search" textFill="WHITE">
                        <font>
                           <Font size="16.0" />
                        </font>
                     </Button>
                  </children>
               </HBox>
            </children>
         </VBox>
      </children>
   </HBox>
   <padding>
      <Insets top="100.0" />
   </padding>

</VBox>
